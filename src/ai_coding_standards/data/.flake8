[flake8]
# Maximum line length
max-line-length = 100

# Maximum line length for comments and docstrings
max-doc-length = 100

# Complexity threshold
max-complexity = 10

# Select specific error codes to check
select = E,W,F,C90

# Ignore specific error codes
# E501: line too long (handled by max-line-length)
# W503: line break before binary operator (conflicts with Black)
# E203: whitespace before ':' (conflicts with Black)
# C901: too complex (handled by max-complexity)
ignore = E501, W503, E203, C901

# Exclude directories and files
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    .mypy_cache,
    .pytest_cache,
    .tox,
    migrations,
    node_modules

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:E501

# Import order checking (use isort instead, but flake8 can help)
import-order-style = google


